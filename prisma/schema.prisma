// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//เก่งจริงๆครับ กุแพ้
enum Role {
  USER
  ADMIN
}

//เก่งมากครับ

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  password     String
  name         String?       @default("JOHASCOME")
  phoneNumber  String?       @default("0000000000")
  reservations Reservation[]
  role         Role          @default(USER)
  addedFriend  User[]        @relation("friendship") // users that sent this user a friend request
  addFriend    User[]        @relation("friendship") // users who this user sent friend request to
  salt         String
}

model MassageShop {
  id          Int    @id @default(autoincrement())
  name        String
  phoneNumber String
  address     String
  openTime    Int
  closeTime   Int
}

model Reservation {
  id       Int      @id @default(autoincrement())
  user     User     @relation(fields: [userId], references: [id])
  userId   Int
  date     DateTime
  musicURL String?
}
